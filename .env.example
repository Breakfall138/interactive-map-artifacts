# Database Configuration
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://mapui_user:your_secure_password_here@localhost:5432/mapui

# Application Configuration
NODE_ENV=development
HOST=0.0.0.0
PORT=5000

# CORS (comma-separated origins for production)
ALLOWED_ORIGINS=http://localhost:5000,http://localhost:3000

# Tile Storage
TILE_STORAGE_PATH=./tiles

# Logging Configuration
LOG_LEVEL=info                    # Default log level: debug, info, warn, error
LOG_CONSOLE=true                  # Enable console logging (default: true)
LOG_CONSOLE_LEVEL=info            # Console-specific log level (default: LOG_LEVEL)

# File Logging (optional - enabled if LOG_FILE_PATH is set)
# LOG_FILE_PATH=./logs/mapui.log
# LOG_FILE_LEVEL=debug
# LOG_FILE_MAX_SIZE=10485760      # 10MB max file size before rotation
# LOG_FILE_MAX_FILES=5            # Number of rotated files to keep

# Azure Application Insights (optional - enabled if connection string is set)
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=xxx;IngestionEndpoint=https://...
# LOG_APPINSIGHTS_LEVEL=info
# APPINSIGHTS_CLOUD_ROLE=mapui-server
